<h1>Listing trackers</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Title</th>
    <th>Count</th>
	<th>Total views</th>
    <th>Open Rate</th>
    <th>Total sent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trackers.each do |tracker| %>
  <tr>
    <td><%= tracker.name %></td>
    <td><%= tracker.title %></td>
	<td><%= tracker.count %></td>
    <td><%= tracker.total_views %></td>
	<td><%= tracker.open_rate.round(3) %>%</td>
    <td><%= tracker.total_sent %></td>
    <td><%= link_to 'Show', tracker %></td>
    <td><%= link_to 'Edit', edit_tracker_path(tracker) %></td>
    <td><%= link_to 'Destroy', tracker, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p><strong>Keep on trackin'</strong></p>